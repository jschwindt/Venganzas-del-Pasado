- if params[:page].nil?
  - page_title("Comentarios de #{link_to @post.title, @post}")
- else
  - page_title("Comentarios de #{link_to @post.title, @post} <small>página #{params[:page]}</small>")

%h2.fancy-title!= html_page_title

.comments
  - if @comments.count > 0
    = render @comments
  - else
    %p
      No hay comentarios. ¡Podés ser el primero en comentar!

  .row
    .offset1
      = paginate @comments, :window => 2

  - if can? :create, :comment
    %h3 Escribí un comentario
    = render 'comments/form', :post => @post, :comment => @post.comments.build
  - else
    .row
      .offset1
        Tenés que #{link_to "iniciar sesión", new_user_session_path} para comentar.
