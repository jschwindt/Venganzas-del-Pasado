%h2.fancy-title= html_page_title

%ul.tabs
  %li{:class => (params[:has_status].blank? ? 'active' : nil)}
    = link_to "Todos", admin_comments_path
  %li{:class => active_if_current( :has_status => 'approved' )}
    = link_to "Aprobados", admin_comments_path(:has_status => 'approved')
  %li{:class => active_if_current( :has_status => 'pending' )}
    = link_to "Pendientes", admin_comments_path(:has_status => 'pending')
  %li{:class => active_if_current( :has_status => 'flagged' )}
    = link_to "Denunciados", admin_comments_path(:has_status => 'flagged')
  %li{:class => active_if_current( :has_status => 'deleted' )}
    = link_to "En papelera", admin_comments_path(:has_status => 'deleted')

.admin
  = render :partial => 'comments/comment', :collection => @comments

= paginate @comments
