<%= alert_message_for(article) %>
<%= render 'flash' %>
<%= form_for [:admin, article] do |f| %>
  <div class="field">
    <%= f.label :title, class: 'label' %>
    <div class="control">
      <%= f.text_field :title, placeholder: 'Título', class: 'input' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.label :content, class: 'label' %>
      <%= f.marksmith :content %>
    </div>
  </div>
  <div class="field">
    <%= f.label :created_at, "Fecha de publicación", class: 'label' %>
    <div class="select">
      <%= f.date_select :created_at, {
            start_year: 1985,
            end_year: Time.zone.now.year,
            date_separator: '</div><div class="select">'} %>
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <%= f.submit ( article.new_record? ? 'Publicar' : 'Guardar' ), class: 'button is-link' %>
    </div>
    <div class="control">
      <%= link_to 'Cancelar', admin_articles_path, class: "button is-link is-light" %>
    </div>
  </div>
<% end %>
<%= content_for :extra_css do %>
  <%= stylesheet_link_tag "marksmith" %>
<% end %>