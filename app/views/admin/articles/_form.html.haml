= alert_message_for(article)

= form_for [:admin, article], :html => { :class => 'form-stacked' } do |f|
  %fieldset

    - if article.persisted?
      %legend
        Editando ArtÃ­culo ##{article.id}
        - if @article.persisted?
          %small= link_to "Ver original", @article, :target => '_blank'

    .clearfix
      = f.label :title
      .input
        = f.text_field :title, :class => 'xxlarge'
    .clearfix
      = f.label :content
      .input
        = f.text_area :content, :class => 'xxlarge'

    .actions
      = f.submit ( article.new_record? ? 'Publicar' : 'Guardar' ), :class => 'btn primary'
      = link_to 'Cancelar', admin_articles_path, :class => 'btn'
