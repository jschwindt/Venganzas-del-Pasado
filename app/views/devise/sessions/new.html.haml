          .clearfix
            .input
              %ul.inputs-list
                %li
                  %label
                    = f.check_box :remember_me
                    %span Mantener mi sesiÃ³n abierta
      .actions
        = f.submit "Ingresar", :class => 'btn primary'

  = render "devise/shared/links"
