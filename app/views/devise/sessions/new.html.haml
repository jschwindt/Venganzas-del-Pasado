%h2.fancy-title= html_page_title

%div
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %fieldset
      .inputs
        .clearfix
          = f.label :email
          .input= f.text_field :email
        .clearfix
          = f.label :password
          .input= f.password_field :password
