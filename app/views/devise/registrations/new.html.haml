- page_title('Registración')

%h2.fancy-title= html_page_title

= devise_error_messages!

%div
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %fieldset
      .inputs
        .clearfix
          = f.label :email
          .input
            = f.text_field :email
            %span.help-block Esta dirección de mail es privada, no será publicada.
        .clearfix
          = f.label :alias
          .input
            = f.text_field :alias
            %span.help-block El nombre que los demás usuarios verán.
        - if session["devise.facebook_data"].blank?
          .clearfix
            = f.label :password
            .input
              = f.password_field :password
          .clearfix
            = f.label :password_confirmation
            .input
              = f.password_field :password_confirmation
              %span.help-block Repetí la contraseña de arriba.
      .actions
        = f.submit "Registrarse", :class => 'btn primary'
  = render "devise/shared/links"
