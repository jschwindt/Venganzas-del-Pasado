<h3 class="title title-right is-4">
  Programas de <%= I18n.t('date.month_names')[Date.today.month].capitalize %>
</h3>
<%= calendar_for Post.published.this_month.all, year: Date.today.year, month: Date.today.month, html: { class: 'table' } do |calendar| %>
  <%= calendar.head('D', 'L', 'M', 'X', 'J', 'V', 'S') %>
  <% calendar.day(day_method: :creation_date) do |date, posts| %>
    <% if posts.empty? %>
      <%= date.day %>
    <% elsif posts.count == 1 %>
      <%= link_to date.day, posts.first %>
    <% else %>
      <%= link_to date.day, posts_archive_path(date.year, date.month, date.day) %>
    <% end %>
  <% end %>
<% end %>
