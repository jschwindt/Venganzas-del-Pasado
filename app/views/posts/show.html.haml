- title = @post.title

- content_for :head do
  %title #{title} - Venganzas del Pasado

.post-show
  =render @post

%a{ :name => "comments" }
%h4 Comentarios (#{@post.comments.approved.count}):

.comments

  - if @post.comments.approved.count > 0
    =render @post.comments
  - else
    %p
      No hay comentarios. ¡Podés ser el primero en comentar!
      
  - if can? :create, :comment
    = render 'comments/form', :post => @post, :comment => @post.comments.build
  - else
    .row
      .offset1
        Tenés que #{link_to "iniciar sesión", new_user_session_path} para comentar
