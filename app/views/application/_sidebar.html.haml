#sidebar

  .widget
    %h3.fancy Buscador
    = form_tag search_path(what: 'posts'), method: 'get' do
      .input-group
        = text_field_tag :q, params[:q], placeholder: 'Buscar en el sitio', class: 'form-control'
        .input-group-btn
          %button{class: "btn btn-default", type: "submit"}
            %span.glyphicon.glyphicon-search

  .widget
    = render 'layouts/banners/b160x600'
  - cache [:archive, Post.last_updated], :expires_in => 2.days do
    .widget
      = render 'layouts/widgets/daily_archive'
    .widget
      = render 'layouts/widgets/monthly_archive'

  %h3.fancy Segu√≠ a Venganzas del Pasado

  .widget
    - if Rails.env.production?
      = render 'layouts/widgets/facebook'
    - else
      = image_tag('http://placehold.it/265x480/&text=Facebook VdP')

  .widget
    - if Rails.env.production?
      = render 'layouts/widgets/twitter'
    - else
      = image_tag('http://placehold.it/265x480/&text=Twitter VdP')
