<h3 class="title title-right is-4">Buscador</h3>
<div class="content">
<%= form_tag search_path(what: 'posts'), method: 'get' do %>
  <div class="field has-addons">
    <div class="control has-icons-right with100p">
      <%= text_field_tag :q, params[:q], placeholder: 'Buscar en el sitio', class: 'input' %>
    </div>
    <div class="control">
      <button class="button is-link">Ir</button>
    </div>
  </div>
<% end %>
</div>
<%= render 'layouts/widgets/daily_archive' %>
<%= render 'layouts/widgets/monthly_archive' %>
